{
  "users": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": ["userId", "email", "firstName", "lastName", "role", "dateJoined", "isActive"],
      "properties": {
        "userId": { "bsonType": "string" },
        "email": { "bsonType": "string", "pattern": "^.+@.+\\..+$" },
        "firstName": { "bsonType": "string" },
        "lastName": { "bsonType": "string" },
        "role": { "enum": ["student", "instructor"] },
        "dateJoined": { "bsonType": "date" },
        "isActive": { "bsonType": "bool" },
        "profile": { "bsonType": ["object", "null"] }
      }
    }
  },
  "courses": {
    "$jsonSchema": {
      "bsonType": "object"
    }
  },
  "enrollments": {
    "$jsonSchema": {
      "bsonType": "object"
    }
  },
  "lessons": {
    "$jsonSchema": {
      "bsonType": "object"
    }
  },
  "assignments": {
    "$jsonSchema": {
      "bsonType": "object"
    }
  },
  "submissions": {
    "$jsonSchema": {
      "bsonType": "object"
    }
  }
}